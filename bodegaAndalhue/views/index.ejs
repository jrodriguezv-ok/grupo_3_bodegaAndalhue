<%- include('partials/head', {title: 'Tienda'})%>
    <link rel="stylesheet" href="/stylesheets/tienda.css">

    <body>
        <%- include('partials/header')%>
            <main>
                <div class="contenedor">
                    <!-- ENCABEZADO SECCION -->
                    <h1 class="titulo-seccion">TIENDA ONLINE</h1>
                    <section class="buscador-filtro-login">
                        <div class="buscador-filtro">
                            <form action="">
                                <input type="search"><i class="fas fa-search"></i>
                            </form>
                            <img src="/img/icon-filter.svg" alt="icono-filtrar">
                        </div>
                        <a href="/users/loginRegister" id="loginAccess">login</a>
                    </section>
                </div>

                <!-- SECCION BANNER -->
                <section class="banner">
                    <article class="img-flechas">
                        <img src="/img/img-promos.jpg" alt="promos">
                        <div class="cont-flechas">
                            <div class="flechas">
                                <i class="fas fa-angle-left"></i>
                                <i class="fas fa-angle-right"></i>
                            </div>
                        </div>
                    </article>
                    <article class="icon-circulo">
                        <ul>
                            <li><i class="fas fa-circle activo"></i></li>
                            <li><i class="fas fa-circle"></i></li>
                            <li><i class="fas fa-circle"></i></li>
                        </ul>
                    </article>
                </section>

                <!--  MENÚ LÍNEAS -->
                <nav class="lineas">
                    <a href="" class="border-bottom border-right">LÍNEA A</a>
                    <a href="" class="border-bottom border-right">LÍNEA B</a>
                    <a href="">LÍNEA C</a>
                </nav>

                <!-- PRODUCTOS -->
                <h3 class="subtitulo-seccion">PRODUCTOS DESTACADOS</h3>
                <section class="contenedor prod-destacados">
                    <% if (products != undefined){
                            for (var i= 0; i< products.length; i++) { 
                                var product = products[i];
                        %>
                        <article class="producto border-bottom">
                            <a href="/products/detail/<%= product.id %>">
                                <div class="img-desc">
                                    <img src="/img/products/<%= product.image %>" alt="vino">
                                    <p class="descuento">
                                        <% if(product.discount != 0){ %>
                                            <%= product.discount + "%" %>
                                                <% } %>
                                    </p>
                                </div>
                                <div class="prod-items">
                                    <h6 class="categoria">
                                        <%= product.category %>
                                    </h6>
                                    <p class="descripcion">
                                        <%= product.line + ' ' + product.varietal + ' ' + product.quality + ' ' + product.vintage + ' ' + product.display  %>
                                    </p>
                                    <div class="menosMas">
                                        <a href=""><i class="fas fa-minus-circle"></i></a>
                                        <p class="cantidad">1</p>
                                        <a href=""><i class="fas fa-plus-circle"></i></a>
                                    </div>
                                    <div class="precio">
                                        <h5 class="antes">
                                            <% if(product.discount != 0){ %>
                                                <%= "$"+ product.price %>
                                                    <% } %>
                                        </h5>
                                        <h5 class="ahora">
                                            <%= '$'+ toThousand(product.price - (product.price * (product.discount / 100))) %>
                                        </h5>
                                    </div>
                                    <a href="/products/cart" class="btn-relleno">Agregar</a>
                                </div>
                            </a>
                        </article>
                        <% }} %>
                </section>
            </main>
            <%- include('partials/footer')%>
    </body>

    </html>