<%- include('../partials/head', {title: 'Login'})%>
    <link rel='stylesheet' href='/stylesheets/register.css'>

    <body>
        <%- include('../partials/header')%>
            <main>
                <section class="contenedor">
                    <h1 class="titulo-seccion">INICIO DE SESIÓN</h1>
                    <div class="poesia">¿Estás preparada/o para descubrir un mundo <br>de poesía embotellada?</div>
                </section>
                <div class="slider">
                    <img src="/img/slider_register.jpg">
                </div>
                <section class="contenedor">
                    <h3 class="enunciado-mayor">Iniciá tu sesión</h3>
                    <% if(typeof errors != "undefined") { %>
                        <ul>
                            <% for(var i = 0; i < errors.length; i++) { %>
                                <li>
                                    <%= errors[i].msg %>
                                </li>
                                <% } %>
                        </ul>
                        <% } %>
                            <form class="formLogin" action="/users/login" method="POST">
                                <div class="labelInput"> <label for="Correo electrónico *">Correo electrónico *</label>
                                    <input type="email" name="email" id="email" required></div>
                                <div class="labelInput">
                                    <label for=" Contraseña *"> Contraseña * <a href="">¿Olvidaste tu contraseña?</a></label>
                                    <input type="password" name="password" id="password" required></div>
                                <button type="submit" id="login" class="btn-border-max" data-toggle="modal">accedé</button>
                            </form>
                            <% if(typeof errorAlLoguear != "undefined"){ %>
                                <h4 class="errores">
                                    <%= errorAlLoguear %>
                                </h4>
                                <% } %>
                </section>
            </main>
            <div class="modal">
                <h2>
                    <% if(typeof usuarioLogueado != "undefined"){ %>
                        <%= '¡Hola ' + usuarioLogueado.first_name + '!'%>
                            <% } %>
                </h2>
                <h4>Te logueaste con éxito. Ya podés</h4>
                <a href="/" class="btn-border-max">comprar</a>
            </div>
            <%- include('../partials/footer')%>
    </body>

    </html>